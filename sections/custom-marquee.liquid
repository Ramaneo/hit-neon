<style>
  .font-container {
    position: relative;
    transform: rotate(4deg);
    margin-top: 100px;
  }
  .marquee {
    --gap: 1rem;
    position: relative;
    display: flex;
    overflow: hidden;
    user-select: none;
    gap: var(--gap);
    height: 75px !important;
  }
  .text-container {
    background: #04062a;
    line-height: normal;
    margin-bottom: 17px;
    position: relative;
    height: 75px !important;
  }
  .enable-animation .marquee__content {
    {% comment %} animation: scroll 23s linear infinite; {% endcomment %}
    {% comment %} animation: scroll {{ section.settings.speed }}s linear infinite; {% endcomment %}
    animation: scroll {% section.settings.speed %}s linear infinite;
    scroll-behavior: smooth;
    justify-content: space-around;
  }
  .text-container ul {
    {% comment %} list-style-type: disc; {% endcomment %}
    display: flex;
    align-items: center;
    margin: 0px;
  }

  .marquee__content {
    flex-shrink: 0;
    display: flex;
    /* justify-content: space-around; */
    gap: var(--gap);
    min-width: 100%;
    list-style: inside;
    margin: 0;
  }
  .marquee__content > * {
    flex: 0 0 auto;
    color: white;
    margin: 2px;
    border-radius: 0.25rem;
    text-align: center;
    font-size: 36px;
    font-weight: bold;
  }
  .font-container::before {
    content: '';
    background: #04062a;
    position: absolute;
    left: -8px;
    top: 0;
    height: 100%;
    width: 10px;
    transform: rotate(2deg);
  }

  li.text-details {
    font-size: 30px !important;
  }

  @keyframes scroll {
    0% {
      transform: translateX(0);
    }

    100% {
      transform: translateX(calc(-100% - var(--gap)));
    }
  }
</style>
<section class="font-container">
  <div class="marquee text-container enable-animation">
    <ul class="marquee__content">
      <li class="text-details" style="color: #C5FC2A">
        <span>{{ section.settings.content }}</span>
      </li>
      <li class="text-details" style="color: #C5FC2A">
        <span>{{ section.settings.content }}</span>
      </li>
      <li class="text-details" style="color: #C5FC2A">
        <span>{{ section.settings.content }}</span>
      </li>
    </ul>

    <ul aria-hidden="true" class="marquee__content">
      <li class="text-details" style="color: #C5FC2A">
        <span>{{ section.settings.content }}</span>
      </li>
      <li class="text-details" style="color: #C5FC2A">
        <span>{{ section.settings.content }}</span>
      </li>
      <li class="text-details" style="color: #C5FC2A">
        <span>{{ section.settings.content }}</span>
      </li>
    </ul>
  </div>
</section>

{% schema %}
{
  "settings": [
    {
      "id": "content",
      "type": "text",
      "label": "Content Text"
    },
    {
      "id": "speed",
      "type": "text",
      "label": "Banner Scroll Speed",
      "default": 23
    }
  ],
  "presets": [
    {
      "name": "Custom Marquee",
      "category": "Reference"
    }
  ]
}
{% endschema %}
