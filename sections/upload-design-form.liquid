<style>
  div.input-container {
    position: relative;
  }
  div.input-container input, textarea {
    font-size: 1.6rem;
    color: #495055;
    width: 400px;
    padding: 10px 15px;
    border-radius: 1rem;
    border: 1px solid #C1C7D0;
    outline: none;
    box-shadow: none;
  }
  div.input-container label {
    {% comment %} margin: 17px 0; {% endcomment %}
    padding: 0 4px;
    color: black;
    display: flex;
    align-items: center;
    font-size: 1.3rem;
    top: 0;
    left: 17px;
    transition: all 0.2s;
    transform-origin: 0% 0%;
    background: none;
    pointer-events: none;
  }

  div.input-container input:focus {
    color: #284b63;
    border-color: #284b63;
  }
  div.input-container input:focus + label {
    color: #284b63;
  }
  .upload-form-container {
    display: flex;
    flex-direction: column;
  }
  .upload-design-container {
    padding: 30px;
    flex: 1;

  }
  .input-container {
    display: flex;
    flex-direction: column;
  }
  .upload-design-container form {
    display: flex;
    flex-direction: column;
    gap: 20px;
  }
  .upload-submit {
    border: none;
    padding: 12px 55px;
    font-size: 1.3rem;
    background-color: #00823E;
    color: white;
    border-radius: 8px;
    cursor: pointer;
  }
  {% comment %}  {% endcomment %}

  .upload-logo {
    position: relative;
    display: flex;
    align-items: center;
    width: 400px;
    max-width: 100%;
    padding: 25px;
    background-color: #fff;
    border-radius: 12px;
    transition: .3s;
    border: 1px solid #C1C7D0;
  }
  .upload-logo.is-active {
    background-color: #F0FCF2;
  }

  .fake-btn {
    flex-shrink: 0;
    background-color: #C3C9D1;
    border-radius: 8px;
    padding: 8px 15px;
    margin-right: 10px;
    font-size: 12px;
    margin-top: 10px;
  }

  .file-msg {
    color: #9699b3;
    font-size: 16px;
    font-weight: 300;
    line-height: 1.4;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
  }

