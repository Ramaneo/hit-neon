<style>
   .our-expertise h3 {
     font-size: 1.5em;

     &.faq {
     margin: 1em 0;
     text-align: left;

       @include media(max-width $small-screen) {
       margin-left: 20px;
         }
     }
   }

   .faq-container {
     max-width: 1280px;
       padding-bottom: 1.5em;
       margin: 0 auto;
       width: 90%;
   }

    .mobile-expertise-faq {
      max-width: 73.4rem;
      margin-left: auto;
      margin-right: auto;
    }

   h3.mobile-faq-menu {
     margin: auto;
     padding: 20px;
     padding-left: 0;
     font-size: 15px;
     font-weight: 700;     border-bottom: 0.1rem solid rgba(var(--color-foreground), 0.08);
